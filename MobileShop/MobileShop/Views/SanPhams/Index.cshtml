@model IEnumerable<MobileShop.Models.SanPham>

@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="container mt-4">
    <h2 class="fw-bold text-danger text-center mb-4">📱 Danh sách sản phẩm</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="~/images/@item.HinhAnh"
                         class="card-img-top"
                         alt="@item.TenSp"
                         style="height:220px;object-fit:contain;background-color:#f8f9fa;">
                    <div class="card-body text-center">
                        <h6 class="fw-bold">@item.TenSp</h6>
                        <p class="text-danger fw-bold">@string.Format("{0:N0} ₫", item.Gia)</p>
                        <p class="text-muted small">@item.MoTa</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center pb-3">
                        <a asp-action="Details" asp-route-id="@item.MaSp" class="btn btn-outline-danger btn-sm px-4">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
