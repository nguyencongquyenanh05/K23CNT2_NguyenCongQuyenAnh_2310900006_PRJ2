@model MobileShop.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh Sửa Sản Phẩm";
}

<!-- Thêm Bootstrap Icons nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 800px;">
        <div class="card-header bg-warning bg-gradient text-dark text-center rounded-top-4 py-3">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-pencil-square"></i> Chỉnh Sửa Sản Phẩm
            </h3>
        </div>

        <div class="card-body px-5 py-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="MaSp" />

                <div class="form-group mb-3">
                    <label asp-for="TenSp" class="form-label fw-semibold">
                        <i class="bi bi-tag"></i> Tên sản phẩm
                    </label>
                    <input asp-for="TenSp" class="form-control shadow-sm" placeholder="Nhập tên sản phẩm..." />
                    <span asp-validation-for="TenSp" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Gia" class="form-label fw-semibold">
                        <i class="bi bi-currency-dollar"></i> Giá bán
                    </label>
                    <input asp-for="Gia" type="number" class="form-control shadow-sm" placeholder="Nhập giá sản phẩm..." />
                    <span asp-validation-for="Gia" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MoTa" class="form-label fw-semibold">
                        <i class="bi bi-file-text"></i> Mô tả
                    </label>
                    <textarea asp-for="MoTa" rows="3" class="form-control shadow-sm" placeholder="Nhập mô tả chi tiết..."></textarea>
                    <span asp-validation-for="MoTa" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MaDanhMuc" class="form-label fw-semibold">
                        <i class="bi bi-collection"></i> Danh mục
                    </label>
                    <select asp-for="MaDanhMuc" class="form-select shadow-sm" asp-items="ViewBag.MaDanhMuc">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="MaDanhMuc" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="HinhAnh" class="form-label fw-semibold">
                        <i class="bi bi-image"></i> Hình ảnh sản phẩm
                    </label>
                    <input asp-for="HinhAnh" type="file" class="form-control shadow-sm" accept="image/*" onchange="previewImage(event)" />
                    <span asp-validation-for="HinhAnh" class="text-danger small"></span>

                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <div class="mt-3 text-center">
                            <p class="fw-semibold">Ảnh hiện tại:</p>
                            <img src="~/images/@Model.HinhAnh" alt="Ảnh sản phẩm" class="rounded-3 shadow-sm" style="max-width: 150px; height: auto;" />
                        </div>
                    }

                    <div id="preview" class="mt-3 text-center"></div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-warning px-4 shadow-sm fw-semibold text-dark">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            const output = document.getElementById('preview');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function () {
                    output.innerHTML = `<p class="fw-semibold mt-2">Ảnh mới chọn:</p><img src="${reader.result}" class="rounded-3 shadow-sm" style="max-width: 150px; height: auto;" />`;
                };
                reader.readAsDataURL(file);
            } else {
                output.innerHTML = "";
            }
        }
    </script>
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 8px rgba(255, 193, 7, 0.25);
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .btn-warning:hover {
        background-color: #f1b600;
        transform: translateY(-1px);
    }
</style>
