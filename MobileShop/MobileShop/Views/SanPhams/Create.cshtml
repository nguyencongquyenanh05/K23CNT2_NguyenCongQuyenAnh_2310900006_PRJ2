@model MobileShop.Models.SanPham

@{
    ViewData["Title"] = "Thêm Sản Phẩm";
}

<!-- Thêm Bootstrap Icons nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 800px;">
        <div class="card-header bg-primary bg-gradient text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-box-seam"></i> Thêm Sản Phẩm Mới
            </h3>
        </div>

        <div class="card-body px-5 py-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="TenSp" class="form-label fw-semibold">
                        <i class="bi bi-tag"></i> Tên sản phẩm
                    </label>
                    <input asp-for="TenSp" class="form-control shadow-sm" placeholder="Nhập tên sản phẩm..." />
                    <span asp-validation-for="TenSp" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Gia" class="form-label fw-semibold">
                        <i class="bi bi-currency-dollar"></i> Giá bán
                    </label>
                    <input asp-for="Gia" type="number" class="form-control shadow-sm" placeholder="Nhập giá sản phẩm..." />
                    <span asp-validation-for="Gia" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MoTa" class="form-label fw-semibold">
                        <i class="bi bi-file-text"></i> Mô tả
                    </label>
                    <textarea asp-for="MoTa" rows="3" class="form-control shadow-sm" placeholder="Nhập mô tả chi tiết sản phẩm..."></textarea>
                    <span asp-validation-for="MoTa" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MaDanhMuc" class="form-label fw-semibold">
                        <i class="bi bi-collection"></i> Danh mục
                    </label>
                    <select asp-for="MaDanhMuc" class="form-select shadow-sm" asp-items="ViewBag.MaDanhMuc">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="MaDanhMuc" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="HinhAnh" class="form-label fw-semibold">
                        <i class="bi bi-image"></i> Hình ảnh sản phẩm
                    </label>
                    <input asp-for="HinhAnh" type="file" class="form-control shadow-sm" accept="image/*" />
                    <span asp-validation-for="HinhAnh" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary px-4 shadow-sm fw-semibold">
                        <i class="bi bi-save"></i> Lưu sản phẩm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 8px rgba(13, 110, 253, 0.25);
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .btn-primary:hover {
        background-color: #0b5ed7;
        transform: translateY(-1px);
    }
</style>
