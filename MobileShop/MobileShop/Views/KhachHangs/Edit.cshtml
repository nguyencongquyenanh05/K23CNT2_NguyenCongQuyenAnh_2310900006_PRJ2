@model MobileShop.Models.KhachHang

@{
    ViewData["Title"] = "Chỉnh sửa thông tin khách hàng";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0"><i class="fa-solid fa-user-pen me-2"></i> Chỉnh sửa thông tin khách hàng</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="MaKh" />

                <!-- Họ tên -->
                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label fw-semibold">Họ và tên</label>
                    <input asp-for="HoTen" class="form-control shadow-sm" placeholder="Nhập họ tên..." />
                    <span asp-validation-for="HoTen" class="text-danger small"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" class="form-control shadow-sm" type="email" placeholder="Nhập email..." />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Mật khẩu -->
                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label fw-semibold">Mật khẩu</label>
                    <input asp-for="MatKhau" class="form-control shadow-sm" type="password" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="MatKhau" class="text-danger small"></span>
                </div>

                <!-- Địa chỉ -->
                <div class="mb-3">
                    <label asp-for="DiaChi" class="form-label fw-semibold">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control shadow-sm" placeholder="Nhập địa chỉ..." />
                    <span asp-validation-for="DiaChi" class="text-danger small"></span>
                </div>

                <!-- Số điện thoại -->
                <div class="mb-3">
                    <label asp-for="SoDienThoai" class="form-label fw-semibold">Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="form-control shadow-sm" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
                </div>

                <!-- Nút hành động -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fa-solid fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        max-width: 650px;
        margin: auto;
    }
</style>
