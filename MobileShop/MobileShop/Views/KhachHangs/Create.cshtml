@model MobileShop.Models.KhachHang

@{
    ViewData["Title"] = "Thêm Khách Hàng";
}

<!-- Thêm Bootstrap Icons nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-success bg-gradient text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-person-plus"></i> Thêm Khách Hàng Mới
            </h3>
        </div>

        <div class="card-body px-5 py-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="HoTen" class="form-label fw-semibold">
                        <i class="bi bi-person"></i> Họ và tên
                    </label>
                    <input asp-for="HoTen" class="form-control shadow-sm" placeholder="Nhập họ và tên khách hàng..." />
                    <span asp-validation-for="HoTen" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">
                        <i class="bi bi-envelope"></i> Email
                    </label>
                    <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="Nhập địa chỉ email..." />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MatKhau" class="form-label fw-semibold">
                        <i class="bi bi-lock"></i> Mật khẩu
                    </label>
                    <input asp-for="MatKhau" type="password" class="form-control shadow-sm" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="MatKhau" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DiaChi" class="form-label fw-semibold">
                        <i class="bi bi-geo-alt"></i> Địa chỉ
                    </label>
                    <input asp-for="DiaChi" class="form-control shadow-sm" placeholder="Nhập địa chỉ khách hàng..." />
                    <span asp-validation-for="DiaChi" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="SoDienThoai" class="form-label fw-semibold">
                        <i class="bi bi-telephone"></i> Số điện thoại
                    </label>
                    <input asp-for="SoDienThoai" class="form-control shadow-sm" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4 shadow-sm fw-semibold">
                        <i class="bi bi-save"></i> Lưu khách hàng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 8px rgba(25, 135, 84, 0.25);
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .btn-success:hover {
        background-color: #157347;
        transform: translateY(-1px);
    }
</style>
