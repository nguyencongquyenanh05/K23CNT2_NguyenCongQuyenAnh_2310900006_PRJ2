@model IEnumerable<MobileShop.Models.KhachHang>

@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            <i class="fas fa-users me-2"></i> Danh sách khách hàng
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-user-plus me-1"></i> Thêm khách hàng
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã KH</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>#@item.MaKh</td>
                                <td>@item.HoTen</td>
                                <td>@item.Email</td>
                                <td>@item.DiaChi</td>
                                <td>@item.SoDienThoai</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.MaKh" class="btn btn-sm btn-outline-info me-1">
                                        <i class="fas fa-info-circle"></i> Chi tiết
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MaKh" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaKh" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-user-slash fa-2x mb-2 d-block"></i>
                                Chưa có khách hàng nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a2e0f6d7f4.js" crossorigin="anonymous"></script>
