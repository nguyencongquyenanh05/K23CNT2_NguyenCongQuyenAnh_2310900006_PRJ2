@model MobileShop.Models.KhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-user-xmark me-2"></i>Xác nhận xóa khách hàng</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                ⚠️ Bạn có chắc chắn muốn <strong>xóa vĩnh viễn</strong> khách hàng này không?<br />
                <small>Hành động này không thể hoàn tác.</small>
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-3 text-muted">Họ và tên</dt>
                <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.HoTen)</dd>

                <dt class="col-sm-3 text-muted">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 text-muted">Mật khẩu</dt>
                <dd class="col-sm-9"><span class="text-secondary">********</span></dd>

                <dt class="col-sm-3 text-muted">Địa chỉ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>

                <dt class="col-sm-3 text-muted">Số điện thoại</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoDienThoai)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="MaKh" />
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fa-solid fa-ban me-1"></i> Hủy
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fa-solid fa-trash-can me-1"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
}
