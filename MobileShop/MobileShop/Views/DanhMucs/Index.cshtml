@model IEnumerable<MobileShop.Models.DanhMuc>

@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            <i class="fas fa-folder-open me-2"></i> Danh sách danh mục
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Thêm danh mục mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60%">Tên danh mục</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenDanhMuc</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-outline-info me-1">
                                        <i class="fas fa-info-circle"></i> Chi tiết
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                Chưa có danh mục nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a2e0f6d7f4.js" crossorigin="anonymous"></script>
