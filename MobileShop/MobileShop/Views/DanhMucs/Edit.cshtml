@model MobileShop.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i> Chỉnh sửa danh mục</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="MaDanhMuc" />

                <div class="mb-3">
                    <label asp-for="TenDanhMuc" class="form-label fw-semibold">Tên danh mục</label>
                    <input asp-for="TenDanhMuc" class="form-control shadow-sm" placeholder="Nhập tên danh mục..." />
                    <span asp-validation-for="TenDanhMuc" class="text-danger small"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fa-solid fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        max-width: 600px;
        margin: auto;
    }
</style>
