@model MobileShop.Models.DanhMuc

@{
    ViewData["Title"] = "Thêm Danh Mục";
}

<!-- Thêm link Bootstrap Icons nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-success bg-gradient text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-folder-plus me-2"></i>Thêm Danh Mục Sản Phẩm
            </h3>
        </div>

        <div class="card-body px-5 py-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="TenDanhMuc" class="form-label fw-semibold">
                        <i class="bi bi-tags-fill me-1"></i> Tên danh mục
                    </label>
                    <input asp-for="TenDanhMuc" class="form-control shadow-sm" placeholder="Nhập tên danh mục..." />
                    <span asp-validation-for="TenDanhMuc" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4 shadow-sm fw-semibold">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 8px rgba(25, 135, 84, 0.25);
    }

    .btn-success:hover {
        background-color: #157347;
        transform: translateY(-1px);
        transition: 0.2s ease-in-out;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
</style>
