@model MobileShop.Models.SanPham

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="~/images/@Model.HinhAnh" class="img-fluid rounded" style="max-height:300px;" />
            </div>
            <div class="col-md-8">
                <h3 class="fw-bold text-danger">@Model.TenSp</h3>
                <p class="text-muted">@Model.MoTa</p>
                <h5 class="fw-bold text-primary">@string.Format("{0:N0} ₫", Model.Gia)</h5>
                <hr />
                <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>
