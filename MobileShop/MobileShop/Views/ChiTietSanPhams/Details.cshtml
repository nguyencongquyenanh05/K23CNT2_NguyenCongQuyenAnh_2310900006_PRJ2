@model MobileShop.Models.ChiTietSanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>Chi tiết sản phẩm
            </h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Cấu hình</dt>
                <dd class="col-sm-9">@Model.CauHinh</dd>

                <dt class="col-sm-3 fw-bold">Mô tả chi tiết</dt>
                <dd class="col-sm-9">@Model.MoTaChiTiet</dd>

                <dt class="col-sm-3 fw-bold">Số lượng tồn</dt>
                <dd class="col-sm-9">@Model.SoLuongTon</dd>

                <dt class="col-sm-3 fw-bold">Màu sắc</dt>
                <dd class="col-sm-9">@Model.MauSac</dd>

                <dt class="col-sm-3 fw-bold">Mã sản phẩm</dt>
                <dd class="col-sm-9">@Model.MaSpNavigation?.MaSp</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.MaCtsp" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
