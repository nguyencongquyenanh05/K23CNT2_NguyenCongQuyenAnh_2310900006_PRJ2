@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">🔐 Đăng nhập</h2>

    <form asp-action="Login" method="post">
        <div class="form-group mb-3">
            <label>Tên đăng nhập / Email</label>
            <input type="text" name="username" class="form-control" required placeholder="Nhập email hoặc tài khoản admin" />
        </div>

        <div class="form-group mb-3">
            <label>Mật khẩu</label>
            <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu" />
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <button type="submit" class="btn btn-primary w-100 mt-3">Đăng nhập</button>
    </form>

    <p class="text-center mt-3">
        <a asp-controller="Home" asp-action="Index">⬅️ Quay lại trang chủ</a>
    </p>
</div>
