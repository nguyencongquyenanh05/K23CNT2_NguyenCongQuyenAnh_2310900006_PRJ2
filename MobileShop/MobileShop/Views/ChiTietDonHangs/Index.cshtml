@model IEnumerable<MobileShop.Models.ChiTietDonHang>

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            <i class="fas fa-list me-2"></i> Danh sách chi tiết đơn hàng
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Thêm chi tiết đơn hàng
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã chi tiết</th>
                        <th>Mã đơn hàng</th>
                        <th>Mã sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaCt</td>
                                <td>#@item.MaDhNavigation?.MaDh</td>
                                <td>@item.MaSpNavigation?.TenSp</td>
                                <td>@item.SoLuong</td>
                                <td>@String.Format("{0:N0} ₫", item.DonGia)</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.MaCt" class="btn btn-sm btn-outline-info me-1">
                                        <i class="fas fa-info-circle"></i> Chi tiết
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MaCt" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaCt" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">
                                <i class="fas fa-box-open me-2"></i> Chưa có dữ liệu chi tiết đơn hàng
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
