@model MobileShop.Models.Admin

@{
    ViewData["Title"] = "Chi tiết quản trị viên";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-user-shield me-2"></i>Thông tin Quản trị viên</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Tên đăng nhập</dt>
                <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.Username)</dd>

                <dt class="col-sm-3 text-muted">Mật khẩu</dt>
                <dd class="col-sm-9">
                    <span class="text-secondary">********</span> <!-- Ẩn password -->
                </dd>

                <dt class="col-sm-3 text-muted">Họ và tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3 text-muted">Email</dt>
                <dd class="col-sm-9">
                    <a href="mailto:@Model.Email" class="text-decoration-none text-primary">
                        @Html.DisplayFor(model => model.Email)
                    </a>
                </dd>

                <dt class="col-sm-3 text-muted">Ngày tạo tài khoản</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </dl>
        </div>

        <div class="card-footer bg-light d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model?.AdminId" class="btn btn-warning me-2">
                <i class="fa-solid fa-pen-to-square me-1"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-list me-1"></i> Danh sách
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
}
