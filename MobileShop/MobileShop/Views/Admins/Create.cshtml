@model MobileShop.Models.Admin

@{
    ViewData["Title"] = "Thêm Quản Trị Viên";
}

<!-- Thêm link Bootstrap Icons nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-person-plus me-2"></i>Thêm Quản Trị Viên
            </h3>
        </div>

        <div class="card-body px-5 py-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label fw-semibold">
                        <i class="bi bi-person-fill me-1"></i> Tên đăng nhập
                    </label>
                    <input asp-for="Username" class="form-control shadow-sm" placeholder="Nhập tên đăng nhập..." />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">
                        <i class="bi bi-lock-fill me-1"></i> Mật khẩu
                    </label>
                    <input asp-for="Password" type="password" class="form-control shadow-sm" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label fw-semibold">
                        <i class="bi bi-person-vcard me-1"></i> Họ và tên
                    </label>
                    <input asp-for="FullName" class="form-control shadow-sm" placeholder="Nhập họ tên đầy đủ..." />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Email" class="form-label fw-semibold">
                        <i class="bi bi-envelope-fill me-1"></i> Email
                    </label>
                    <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="Nhập địa chỉ email..." />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary px-4 shadow-sm fw-semibold">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 8px rgba(13, 110, 253, 0.25);
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        transform: translateY(-1px);
        transition: 0.2s ease-in-out;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
</style>
