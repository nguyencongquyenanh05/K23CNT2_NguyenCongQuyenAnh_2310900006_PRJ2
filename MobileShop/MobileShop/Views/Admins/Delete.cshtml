@model MobileShop.Models.Admin

@{
    ViewData["Title"] = "Xóa tài khoản Admin";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white text-center rounded-top-4">
            <h3><i class="fa-solid fa-triangle-exclamation me-2"></i> Xác nhận xóa tài khoản Admin</h3>
        </div>

        <div class="card-body">
            <p class="text-center text-muted mb-4">
                Bạn có chắc chắn muốn <strong>xóa tài khoản này</strong> không? <br />
                Hành động này <span class="text-danger fw-semibold">không thể hoàn tác</span>.
            </p>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold text-secondary">Tên đăng nhập</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Mật khẩu</dt>
                <dd class="col-sm-9 text-muted">
                    ********
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Họ và tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Ngày tạo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="text-center mt-4">
                <input type="hidden" asp-for="AdminId" />
                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="fa-solid fa-trash-can me-1"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fa-solid fa-arrow-left me-1"></i> Quay lại danh sách
                </a>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 700px;
        margin: auto;
    }

    dt {
        margin-bottom: .25rem;
    }

    dd {
        margin-bottom: 1rem;
    }
</style>
