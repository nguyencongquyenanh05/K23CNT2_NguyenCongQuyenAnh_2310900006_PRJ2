@using Microsoft.AspNetCore.Http

@{
    var role = Context?.Session?.GetString("Role");
    var userName = Context?.Session?.GetString("UserName");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MobileShop</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MobileShop.styles.css" asp-append-version="true" />

    <style>
        /* 🎨 NAVBAR STYLE - tone xanh mực */
        .navbar {
            background: linear-gradient(90deg, #0d1b2a, #1b263b);
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.3);
            padding: 0.75rem 1rem;
        }

        .navbar-brand img {
            height: 38px;
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: rotate(-5deg) scale(1.1);
            }

        .navbar-brand span {
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .navbar-nav .nav-link {
            color: #f1f5f9 !important;
            font-weight: 500;
            margin: 0 6px;
            transition: all 0.2s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #00b4d8 !important;
                transform: translateY(-2px);
            }

            .navbar-nav .nav-link.fw-bold {
                background: rgba(255, 255, 255, 0.1);
                border-radius: 15px;
                padding: 6px 14px;
            }

        /* 🔍 SEARCH BAR */
        .search-bar {
            position: relative;
            flex-grow: 1;
            max-width: 400px;
            margin: 8px auto;
        }

            .search-bar input {
                width: 100%;
                padding: 8px 36px 8px 15px;
                border: none;
                border-radius: 25px;
                font-size: 0.95rem;
                background-color: #f1f5f9;
                transition: box-shadow 0.3s ease;
            }

                .search-bar input:focus {
                    outline: none;
                    box-shadow: 0 0 10px rgba(0, 180, 216, 0.6);
                }

            .search-bar button {
                position: absolute;
                right: 8px;
                top: 50%;
                transform: translateY(-50%);
                background: transparent;
                border: none;
                color: #1b263b;
                font-size: 1.1rem;
                cursor: pointer;
                transition: color 0.3s ease;
            }

                .search-bar button:hover {
                    color: #00b4d8;
                }

        /* 🦶 FOOTER */
        footer {
            background: #1b263b;
            color: #f1f5f9;
            border-top: 1px solid #27344a;
            padding: 15px 0;
        }

            footer a {
                color: #00b4d8;
            }

                footer a:hover {
                    color: #90e0ef;
                }

            footer p {
                margin: 0;
            }

        body {
            background-color: #f8fafc;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">

                <!-- LOGO -->
                <a class="navbar-brand d-flex align-items-center fw-bold text-white" asp-controller="Home" asp-action="Index">
                    <img src="~/css/images/apple.png" alt="MobileShop Logo">
                </a>

                <!-- TOGGLER -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center text-center text-lg-start">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SanPhams" asp-action="Index">Sản phẩm</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="GioHang" asp-action="Index">Giỏ hàng</a>
                        </li>

                        <!-- 🔍 THANH TÌM KIẾM -->
                        <li class="nav-item w-100 w-lg-auto mx-lg-3">
                            <form asp-controller="SanPhams" asp-action="TimKiem" method="get" class="search-bar">
                                <input type="text" name="keyword" placeholder="🔍 Tìm kiếm sản phẩm..." />
                                <button type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </form>
                        </li>

                        <!-- 👤 NGƯỜI DÙNG -->
                        @if (!string.IsNullOrEmpty(role))
                        {
                            <li class="nav-item">
                                <span class="nav-link">👋 Xin chào, @userName!</span>
                            </li>

                            @if (role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-bold" asp-controller="Admin" asp-action="Index">Trang quản trị</a>
                                </li>
                            }
                            else
                            {
                                 <li class="nav-item">
                                    <a class="nav-link" asp-controller="KhachHangs" asp-action="ThongTinCaNhan">
                                        Tài khoản của tôi
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- BODY -->
    <main class="flex-grow-1 container my-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="mt-auto">
        <div class="container text-center">
            <p class="small mb-0">
                &copy; 2025 <strong>MobileShop</strong> —
                <a href="@Url.Action("Privacy", "Home")" class="text-decoration-none">Chính sách bảo mật</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
