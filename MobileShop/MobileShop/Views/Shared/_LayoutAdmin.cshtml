@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var adminName = HttpContextAccessor.HttpContext?.Session?.GetString("UserName") ?? "Quản trị viên";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản trị MobileShop</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f5f6fa;
            font-family: "Segoe UI", sans-serif;
            margin: 0;
        }

        /* SIDEBAR */
        .sidebar {
            width: 250px;
            background: #1e1e2f;
            color: #f8f9fa;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 25px 20px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.25);
        }

            .sidebar h4 {
                text-align: center;
                color: #ff4b5c;
                font-weight: 700;
                margin-bottom: 30px;
                letter-spacing: 0.5px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                color: #adb5bd;
                text-decoration: none;
                padding: 10px 14px;
                border-radius: 8px;
                margin-bottom: 10px;
                transition: all 0.25s ease;
                font-size: 15px;
            }

                .sidebar a:hover {
                    background: #2a2d3e;
                    color: #fff;
                    transform: translateX(4px);
                }

                .sidebar a.active {
                    background: #343a40;
                    color: #fff;
                    font-weight: 600;
                    border-left: 4px solid #ff4b5c;
                    padding-left: 12px;
                }

            .sidebar hr {
                border-color: #444;
                margin: 20px 0;
            }

        /* MAIN CONTENT */
        .main-content {
            margin-left: 250px;
            width: calc(100% - 250px);
            padding: 30px;
        }

        .admin-header {
            background: #fff;
            border-radius: 10px;
            padding: 15px 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

            .admin-header h5 {
                margin: 0;
                font-weight: 600;
                color: #333;
            }

        footer {
            text-align: center;
            font-size: 14px;
            color: #6c757d;
            margin-top: 40px;
            padding-top: 10px;
            border-top: 1px solid #dee2e6;
        }

        .logout {
            color: #ff4b5c !important;
            font-weight: 600;
        }

            .logout:hover {
                background: #3a3a3a;
            }
    </style>
</head>

<body>
    <!-- SIDEBAR -->
    <nav class="sidebar">
        <div>
            <h4>🛠️ Admin Panel</h4>

            <a asp-controller="Admin" asp-action="Index" class="@(currentController == "Admin" ? "active" : "")">🏠 Trang chủ</a>
            <a asp-controller="AdminSanPhams" asp-action="Index" class="@(currentController == "AdminSanPhams" ? "active" : "")">📱 Sản phẩm</a>
            <a asp-controller="DanhMucs" asp-action="Index" class="@(currentController == "DanhMucs" ? "active" : "")">📂 Danh mục</a>
            <a asp-controller="DonHangs" asp-action="Index" class="@(currentController == "DonHangs" ? "active" : "")">🧾 Đơn hàng</a>
            <a asp-controller="KhachHangs" asp-action="Index" class="@(currentController == "KhachHangs" ? "active" : "")">👥 Khách hàng</a>
            <a asp-controller="Admins" asp-action="Index" class="@(currentController == "Admins" ? "active" : "")">👨‍💼 Quản trị viên</a>

            <hr />
        </div>

        <div>
            <a asp-controller="Account" asp-action="Logout" class="logout">
                🚪 Đăng xuất (@adminName)
            </a>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="admin-header">
            <h5>📊 Trang quản trị hệ thống <strong>MobileShop</strong></h5>
            <span>👋 Xin chào, <strong>@adminName</strong></span>
        </div>

        @RenderBody()

        <footer>
            <small>© 2025 <strong>MobileShop</strong> — Trang quản trị</small>
        </footer>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
