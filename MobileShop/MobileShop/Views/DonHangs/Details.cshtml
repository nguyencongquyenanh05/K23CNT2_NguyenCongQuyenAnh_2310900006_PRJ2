@model MobileShop.Models.DonHang

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="fas fa-receipt me-2"></i>
            <h4 class="mb-0">Chi tiết đơn hàng</h4>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Mã đơn hàng</dt>
                <dd class="col-sm-9">@Model.MaDh</dd>

                <dt class="col-sm-3 fw-bold">Ngày đặt</dt>
                <dd class="col-sm-9">@Model.NgayDat?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 fw-bold">Tổng tiền</dt>
                <dd class="col-sm-9 text-danger fw-semibold">@Model.TongTien?.ToString("N0") ₫</dd>

                <dt class="col-sm-3 fw-bold">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.TrangThai == "Đã giao")
                    {
                        <span class="badge bg-success">Đã giao</span>
                    }
                    else if (Model.TrangThai == "Đang xử lý")
                    {
                        <span class="badge bg-warning text-dark">Đang xử lý</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.TrangThai</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">Khách hàng</dt>
                <dd class="col-sm-9">@Model.MaKhNavigation?.HoTen</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Model.MaKhNavigation?.Email</dd>

                <dt class="col-sm-3 fw-bold">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.MaKhNavigation?.SoDienThoai</dd>

                <dt class="col-sm-3 fw-bold">Địa chỉ giao hàng</dt>
                <dd class="col-sm-9">@Model.MaKhNavigation?.DiaChi</dd>
            </dl>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
            <a asp-action="Edit" asp-route-id="@Model.MaDh" class="btn btn-warning text-white">
                <i class="fas fa-edit me-1"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>
