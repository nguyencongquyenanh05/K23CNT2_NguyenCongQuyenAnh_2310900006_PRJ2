@model IEnumerable<MobileShop.Models.DonHang>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            <i class="fas fa-receipt me-2"></i> Danh sách đơn hàng
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Thêm đơn hàng mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Mã khách hàng</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>#@item.MaDh</td>
                                <td>@item.NgayDat?.ToString("dd/MM/yyyy")</td>
                                <td>@String.Format("{0:N0} ₫", item.TongTien)</td>
                                <td>
                                    @if (item.TrangThai == "Đã giao")
                                    {
                                        <span class="badge bg-success">Đã giao</span>
                                    }
                                    else if (item.TrangThai == "Đang xử lý")
                                    {
                                        <span class="badge bg-warning text-dark">Đang xử lý</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.TrangThai</span>
                                    }
                                </td>
                                <td>@item.MaKhNavigation?.MaKh</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.MaDh" class="btn btn-sm btn-outline-info me-1">
                                        <i class="fas fa-info-circle"></i> Chi tiết
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MaDh" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaDh" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">
                                <i class="fas fa-box-open me-2"></i> Không có đơn hàng nào
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
