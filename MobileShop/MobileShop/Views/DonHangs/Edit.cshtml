@model MobileShop.Models.DonHang

@{
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i> Chỉnh sửa đơn hàng</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="MaDh" />

                <!-- Khách hàng -->
                <div class="mb-3">
                    <label asp-for="MaKh" class="form-label fw-semibold">Khách hàng</label>
                    <select asp-for="MaKh" class="form-select shadow-sm" asp-items="ViewBag.MaKh"></select>
                    <span asp-validation-for="MaKh" class="text-danger small"></span>
                </div>

                <!-- Ngày đặt -->
                <div class="mb-3">
                    <label asp-for="NgayDat" class="form-label fw-semibold">Ngày đặt</label>
                    <input asp-for="NgayDat" class="form-control shadow-sm" type="datetime-local" />
                    <span asp-validation-for="NgayDat" class="text-danger small"></span>
                </div>

                <!-- Tổng tiền -->
                <div class="mb-3">
                    <label asp-for="TongTien" class="form-label fw-semibold">Tổng tiền (VNĐ)</label>
                    <input asp-for="TongTien" class="form-control shadow-sm" type="number" step="1000" min="0" />
                    <span asp-validation-for="TongTien" class="text-danger small"></span>
                </div>

                <!-- Trạng thái -->
                <div class="mb-3">
                    <label asp-for="TrangThai" class="form-label fw-semibold">Trạng thái đơn hàng</label>
                    <select asp-for="TrangThai" class="form-select shadow-sm">
                        <option value="Đang xử lý">Đang xử lý</option>
                        <option value="Đang giao">Đang giao</option>
                        <option value="Hoàn thành">Hoàn thành</option>
                        <option value="Đã hủy">Đã hủy</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger small"></span>
                </div>

                <!-- Nút hành động -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fa-solid fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        max-width: 700px;
        margin: auto;
    }
</style>
