@model MobileShop.Models.DonHang

@{
    ViewData["Title"] = "Tạo Đơn Hàng";
}

<!-- Thêm Bootstrap Icons nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-primary bg-gradient text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-cart-plus"></i> Tạo Đơn Hàng Mới
            </h3>
        </div>

        <div class="card-body px-5 py-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="MaKh" class="form-label fw-semibold">
                        <i class="bi bi-person"></i> Khách hàng
                    </label>
                    <select asp-for="MaKh" class="form-select shadow-sm" asp-items="ViewBag.MaKh"></select>
                    <span asp-validation-for="MaKh" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TongTien" class="form-label fw-semibold">
                        <i class="bi bi-cash-coin"></i> Tổng tiền (VNĐ)
                    </label>
                    <input asp-for="TongTien" class="form-control shadow-sm" placeholder="Nhập tổng tiền đơn hàng..." />
                    <span asp-validation-for="TongTien" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="TrangThai" class="form-label fw-semibold">
                        <i class="bi bi-info-circle"></i> Trạng thái
                    </label>
                    <select asp-for="TrangThai" class="form-select shadow-sm">
                        <option value="Đang xử lý">Đang xử lý</option>
                        <option value="Đã giao">Đã giao</option>
                        <option value="Đã hủy">Đã hủy</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary px-4 shadow-sm fw-semibold">
                        <i class="bi bi-save"></i> Lưu đơn hàng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 8px rgba(13, 110, 253, 0.25);
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .btn-primary:hover {
        background-color: #0b5ed7;
        transform: translateY(-1px);
    }
</style>
